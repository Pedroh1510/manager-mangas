{
  "name": "manga",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "vitest ",
    "dev": "nodemon --inspect=0.0.0.0:9229 --ignore 'appdata' --ignore 'downloads' --ignore **/*.test.js \"src/server.js\"",
    "migrations": "node-pg-migrate -m src/infra/migrations --env-path .env",
    "migrations:create": "npm run migrations -- create",
    "migrations:up": "npm run migrations -- up",
    "server": "node src/server.js",
    "biome:lint": "biome lint --error-on-warnings ./src",
    "biome:lint:fix": "npx @biomejs/biome lint --write",
    "biome:format": "npx @biomejs/biome format ./src",
    "biome:format:fix": "npx @biomejs/biome format  --write ./src",
    "biome:check": "npx @biomejs/biome check --organize-imports-enabled=true ./src",
    "biome:check:fix": "npx @biomejs/biome check --write ./src",
    "docker:build:push": "docker buildx build --push -t pedroh1510/mangas:latest .",
    "update:interactive": "npx npm-check-updates -i"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@bull-board/api": "^6.7.8",
    "@bull-board/express": "^6.7.8",
    "@bull-board/ui": "^6.7.8",
    "adm-zip": "^0.5.16",
    "async-retry": "^1.3.3",
    "axios": "^1.7.9",
    "bullmq": "^5.41.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "joi": "^17.13.3",
    "jsdom": "^26.0.0",
    "jszip": "^3.10.1",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.13.3",
    "puppeteer": "^24.2.1",
    "puppeteer-extra": "^3.3.6",
    "sharp": "^0.33.5",
    "sql-bricks": "^3.0.1",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/adm-zip": "^0.5.7",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.4",
    "nodemon": "^3.1.9",
    "vitest": "^3.0.6"
  }
}